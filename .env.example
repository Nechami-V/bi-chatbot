# Environment Configuration for External Database
# Copy to .env file in root directory

# Database Configuration
DB_TYPE=sqlserver  # sqlite, sqlserver, mysql, postgresql
DB_SERVER=your-server.database.windows.net
DB_NAME=your_database
DB_USER=your_username  
DB_PASSWORD=your_password
DB_PORT=1433

# Alternative: Connection String
DATABASE_URL=mssql+pyodbc://user:pass@server/db?driver=ODBC+Driver+17+for+SQL+Server

# Authentication Method
AUTH_METHOD=database  # database, active_directory, both

# Active Directory (if using)
AD_SERVER=your-ad-server.com
AD_DOMAIN=company.com

# Security
JWT_SECRET_KEY=your-super-secret-key-here
JWT_EXPIRATION_HOURS=8

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8080